<div class="card-header">
	<h1>Update Owner</h1>
</div>
<div class="card-body">
	<form action="/owners/<%= @owner.id %>" method="POST">
		<input id="hidden" type="hidden" name="_method" value="PATCH">
		<div class="form-group">
			<label for="name">Name:</label>
			<input value="<%= @owner.name %>" id="name" type="text" class="form-control" name="owner[name]">
		</div>
		<div class="form-group">
			<h3>Existing Pets:</h3>
			<% @pets.each do |pet| %>
			<div class="form-check">
				<input type="checkbox" class="form-check-input" name="owner[pet_ids][]" id="<%= pet.id %>"
					value="<%= pet.id %>" <%='checked' if @owner.pets.include?(pet) %>>
				<label class="form-check-label" for="<%= pet.id %>">
					<%= pet.name %>
				</label>
			</div>
			<% end %>
		</div>
		<div class="form-group">
			<h3>New Pet</h3>
			<label for="pet_name">Pet Name: </label>
			<input type="text" class="form-control" name="pet[name]" id="pet_name"></input>
		</div>
		<input type="submit" class="btn btn-primary" value="Update Owner">
	</form>
</div>