<div class="card-header">
	<div class="row">
		<div class="col">
			<h1>Pets</h1>
		</div>
		<div class="col"></div>
		<div class="col">
			<button type="button" class="btn btn-primary float-right" onclick="location.href='/pets/new'">New</button>
		</div>
	</div>
</div>
<div class="card-body">
	<div class="card">
		<ul class="list-group list-group-flush">
			<% if !@pets.blank? %>
			<% for pet in @pets %>
			<li class="list-group-item">
				<a href="/pets/<%= pet.id %>"><%= pet.name %></a>
			</li>
			<% end %>
			<% end %>
		</ul>
	</div>
</div>